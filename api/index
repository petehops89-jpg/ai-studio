// api/index.js - Vercel Serverless Function
const fetch = require('node-fetch');

// Main handler for all API routes
module.exports = async (req, res) => {
  // Enable CORS
  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'GET, POST, OPTIONS');
  res.setHeader('Access-Control-Allow-Headers', 'Content-Type');
  
  if (req.method === 'OPTIONS') {
    return res.status(200).end();
  }

  // Route to /api/chat
  if (req.url === '/api/chat' && req.method === 'POST') {
    return handleChat(req, res);
  }
  
  // Route to /api/video
  if (req.url === '/api/video' && req.method === 'POST') {
    return handleVideo(req, res);
  }
  
  return res.status(404).json({ error: 'Route not found' });
};

// Chat handler using OpenRouter
async function handleChat(req, res) {
  try {
    const { message, model } = req.body;
    
    if (!message || !model) {
      return res.status(400).json({ error: 'Message and model are required' });
    }
    
    const OPENROUTER_API_KEY = process.env.OPENROUTER_API_KEY;
    
    if (!OPENROUTER_API_KEY) {
      return res.status(500).json({ error: 'API key not configured' });
    }
    
    const response = await fetch('https://openrouter.ai/api/v1/chat/completions', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${OPENROUTER_API_KEY}`,
        'HTTP-Referer': 'https://ai-studio.vercel.app',
        'X-Title': 'AI Studio'
      },
      body: JSON.stringify({
        model: model,
        messages: [
          {
            role: 'user',
            content: message
          }
        ]
      })
    });
    
    if (!response.ok) {
      const errorData = await response.text();
      console.error('OpenRouter API error:', errorData);
      return res.status(response.status).json({ 
        error: 'Failed to get response from AI',
        details: errorData
      });
    }
    
    const data = await response.json();
    const aiResponse = data.choices[0]?.message?.content || 'No response generated';
    
    return res.status(200).json({ response: aiResponse });
    
  } catch (error) {
    console.error('Chat error:', error);
    return res.status(500).json({ 
      error: 'Internal server error',
      message: error.message 
    });
  }
}

// Video generation handler using Fal.ai Luma Dream Machine
async function handleVideo(req, res) {
  try {
    const { prompt } = req.body;
    
    if (!prompt) {
      return res.status(400).json({ error: 'Prompt is required' });
    }
    
    const FAL_KEY = process.env.FAL_KEY;
    
    if (!FAL_KEY) {
      return res.status(500).json({ error: 'FAL API key not configured' });
    }
    
    // Submit video generation request
    const submitResponse = await fetch('https://fal.run/fal-ai/luma-dream-machine', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Key ${FAL_KEY}`
      },
      body: JSON.stringify({
        prompt: prompt,
        aspect_ratio: '16:9'
      })
    });
    
    if (!submitResponse.ok) {
      const errorData = await submitResponse.text();
      console.error('Fal.ai submission error:', errorData);
      return res.status(submitResponse.status).json({ 
        error: 'Failed to submit video generation request',
        details: errorData
      });
    }
    
    const submitData = await submitResponse.json();
    const requestId = submitData.request_id;
    
    // Poll for completion (simplified - in production, use webhooks)
    let attempts = 0;
    const maxAttempts = 60; // 5 minutes max
    
    while (attempts < maxAttempts) {
      await new Promise(resolve => setTimeout(resolve, 5000)); // Wait 5 seconds
      
      const statusResponse = await fetch(`https://fal.run/fal-ai/luma-dream-machine/requests/${requestId}`, {
        headers: {
          'Authorization': `Key ${FAL_KEY}`
        }
      });
      
      if (!statusResponse.ok) {
        throw new Error('Failed to check video generation status');
      }
      
      const statusData = await statusResponse.json();
      
      if (statusData.status === 'completed' && statusData.video) {
        return res.status(200).json({ 
          videoUrl: statusData.video.url,
          status: 'completed'
        });
      }
      
      if (statusData.status === 'failed') {
        return res.status(500).json({ 
          error: 'Video generation failed',
          details: statusData.error
        });
      }
      
      attempts++;
    }
    
    return res.status(408).json({ 
      error: 'Video generation timeout',
      message: 'Generation is taking longer than expected'
    });
    
  } catch (error) {
    console.error('Video generation error:', error);
    return res.status(500).json({ 
      error: 'Internal server error',
      message: error.message 
    });
  }
}

// Export for different Vercel function patterns
module.exports.chat = handleChat;
module.exports.video = handleVideo;
